<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="complain_item_subtitle_space">8dp</dimen>
    <dimen name="complain_item_subtitle_text_size">14sp</dimen>

    <style name="Style.Complain.Item.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/complain_item_subtitle_text_size</item>
        <item name="android:padding">@dimen/complain_item_subtitle_space</item>
    </style>

    <declare-styleable name="ComplainCardView">
        <attr name="title_text" format="string" />
        <attr name="head_image_src" format="reference" />
        <attr name="subtitle_hidden" format="boolean" />
        <attr name="subtitle_default_num" format="integer" />
        <attr name="foot_view" format="reference" />
        <attr name="activated" format="boolean" />
        <attr name="activated_color" format="color" />
        <attr name="deactivated_color" format="color" />
    </declare-styleable>

</resources>